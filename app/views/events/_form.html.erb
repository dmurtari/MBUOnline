<%= form_for(@event) do |f| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Event Information</h3>
    </div>
    <div class="panel-body">
      <div class="form-group col-md-6">
        <%= f.radio_button :semester, 'fall' %>
        <%= f.label :semester, 'Fall', :value => 'fall' %>
        <%= f.radio_button :semester, 'spring' %>
        <%= f.label :semester, 'Spring', :value => 'spering' %>
      </div>

      <div class="form-group col-md-6">
        <%= f.label :year, "Year" %>
        <%= f.text_field :year, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Save", class: "btn btn-default center-block" %>    
  </div>
<% end %>