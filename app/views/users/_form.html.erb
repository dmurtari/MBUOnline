<div class="container">
  <%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
      <%= render 'shared/user_error_messages' %>
    <% end %>
    
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Your Information</h3>
      </div>
      <div class="panel-body">
        <div class="form-group col-md-6">
          <%= f.label :firstname, "First Name" %>
          <%= f.text_field :firstname, class: "form-control", placeholder: "Enter your first name" %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :lastname, "Last Name" %>
          <%= f.text_field :lastname, class: "form-control", placeholder: "Enter your last name" %>
        </div>

        <div class="form-group col-md-6">  
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control", placeholder: "you@example.com" %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :phone, "Phone Number" %>
          <%= f.telephone_field :phone, class: "form-control", placeholder: "(555) 555-5555" %>
        </div>

        <div class="form-group col-md-6">
          <%= f.label :troop %>
          <%= f.number_field :troop, class: "form-control", placeholder: "Troop number" %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :district %>
          <%= f.text_field :district, class: "form-control", placeholder: "District" %>
        </div>

        <div class="form-group col-md-6">
          <%= f.label :council %>
          <%= f.text_field :council, class: "form-control", placeholder: "Council" %>
        </div>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Change Password (Optional)</h3>
      </div>
      <div class="panel-body">
        <div class="form-group col-md-6">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control", placeholder: "New Password (Optional)" %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :password_confirmation, "Confirmation" %>
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "New Password Confirmation" %>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-md-offset-3">
      <%= f.label "Enter Current Password to Save Changes" %>
      <%= password_field_tag :current_password, params[:current_password], 
          class: "form-control", placeholder: "Current password"%>
    </div>
    <div class="actions col-md-6 col-md-offset-3"></div>
    <div class="actions col-md-6 col-md-offset-3">
      <%= f.submit "Save changes", class: "btn btn-med btn-default center-block btn-block" %>
    </div>
  <% end %>
</div>