<% provide(:title, "All Users") %>
<div class="page-header">
  <h1>Users of MBU Online</h1>
</div> 

<%= will_paginate %>

<div class="table-responsive">
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Troop</th>
        <th>District</th>
        <th>Council</th>
        <th>Phone</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.firstname %></td>
          <td><%= user.lastname %></td>
          <td><%= user.troop %></td>
          <td><%= user.district %></td>
          <td><%= user.council %></td>
          <td><%= user.phone %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'Details', user %></td>
          <% if current_user.admin? %>
          <td><%= link_to "Edit", edit_user_path(user) %></td>
          <% end %>
          <td><% if current_user.admin? && !current_user?(user) %>
              <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= will_paginate %>