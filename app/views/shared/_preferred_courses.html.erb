<% scout = Scout.find_by(id: params[:id]) %>
<% if !scout.nil? && !scout.preferred_courses.empty? %>
  <div class="table-responsive">
    <table class="table table-hover table-striped">
      
      <thead>
        <tr>
          <th>Course Name</th>
          <th>Description</th>
          <th>Priority</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      
      <tbody>
        <%= hidden_field_tag :scout_id, scout.id %>
        <% scout.preferences.each do |preference| %>
        <!-- Problem: Preference is not getting an ID in URI -->
          <tr>
            <td><%= link_to preference.course.name %></td>
            <td><%= preference.course.description %></td>
            <td>
              <%= form_for preference do |f| %>
                <%= f.label :priority %>
                <%= f.number_field :priority %>
                <%= f.submit "Save" %>
              <% end %>
            </td>
            <td>
              <%= link_to 'Delete', preference, method: :delete, data: 
              { confirm: 'Are you sure? You cannot undo this action'} %>
            </td>
          </tr>
        <% end %>
      </tbody>
    
    </table>
  </div>
<% end %>