<div class="table-responsive">
  <table class="table table-hover table-striped">
    
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Date of Birth</th>
        <th>Emergency Contact</th>
        <th>Notes</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    
    <tbody>
      <% current_user.scouts.each do |scout| %>
        <tr>
          <td><%= scout.firstname %></td>
          <td><%= scout.lastname %></td>
          <td><%= scout.dob %></td>
          <td><%= scout.preferred_courses %></td>
          <td>
            <div class="dropdown">
              <button class="btn btn-default btn-xs dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown">
                <%= scout.emergency_name %>
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                <li role="presentation"><a role="menuitem" tabindex="-1" href="#"><%= scout.emergency_phone %></a></li>
                <li role="presentation"><a role="menuitem" tabindex="-1" href="#"><%= scout.emergency_relation %></a></li>
              </ul>
            </div>
          </td>
          <td>
            <% if !scout.notes.nil? && !scout.notes.empty? %>
              <div class="dropdown">
                <button class="btn btn-default btn-xs dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown">
                  <%= scout.notes[0..50] %>
                  <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                  <li role="presentation"><a role="menuitem" tabindex="-1" href="#"><%= scout.notes %></a></li>
                </ul>
              <% end %>
            </div>
          </td>
          <td>
            <% @courses.each do |course| %>
              <p><%= course.name %></p>
            <% end %>
          </td>
          </td>
          <td><%= link_to 'Edit', edit_scout_path(scout) %></td>
          <td><%= link_to 'Delete', scout, method: :delete, data: { confirm: 'Are you sure?'} %></td>
        </tr> 
      <% end %>  
    </tbody>
  
  </table>
</div>