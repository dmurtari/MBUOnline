<% provide(:title, "Available Courses") %>

<div class="page-header">
  <h1>Available Courses <%= link_to "Add a course", new_course_path, class: "btn btn-lg btn-default pull-right" %></h1>
</div>

<div class="table-responsive">
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Room</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= course.name %></td>
          <td><%= course.description %></td>
          <td><%= course.room %></td>
          <td><%= link_to 'Details', course %></td>
          <td>
            <%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>