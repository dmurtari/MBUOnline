<% provide(:title, "#{@course.name}") %>

<div class="page-header">
<h1>Details about <%= @course.name %></h1>
</div>

<div class="panel panel-default">
  <div class="panel-body">
    <p>
      <strong>Course Name:</strong>
      <%= @course.name %>
    </p>

    <p>
      <strong>Course Description:</strong>
      <%= @course.description %>
    </p>

    <p>
      <strong>Room number:</strong>
      <%= @course.room %>
    </p>
    <p>
      <strong>Price:</strong>
      <%= @course.price %>
    </p>
    <p>
      <strong>Capacity:</strong>
      <%= @course.capacity %>
    </p>

  </div>
</div>

<% if current_user.admin? %>
  <% periods = [1, 2, 3] %>
  <% event = Event.where(current: true).last %>
  <% periods.each do |period| %>
    <div class="panel panel-default">    
      <div class="panel-heading">
        <h3 class="panel-title"><%= "Period #{period}" %></h3>
      </div>
      <div class="panel-body">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Troop</th>
              <th>Notes</th>
              <th>Completion Record</th>
              <th colspan="2"></th>
            </tr>
          </thead>

          <tbody>
            <% Record.where(event: event).scouts.order("troop asc, lastname asc").each do |record| %>
              <% if record.course.name == @course.name && record.period == period &&
                 !record.scout.nil? %>
                <tr>
                  <td> <%= scout.firstname %> </td>
                  <td> <%= scout.lastname %> </td>
                  <td> <%= scout.troop %> </td>
                  <td> <%= scout.notes %> </td>
                  <td> <%= completion %> </td>
                  <td> <%= link_to "Edit Scout", edit_scout_path(scout) %></td>
                  <td> <%= link_to "Edit Completion Record", edit_record_path(record) %></td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
<% end %>
